<h1>EDIT YOUR SESSION</h1>

<%= form_for [@user, @session] do |f| %>
    <div class="field">
        <%= f.label :session_name %></br>
        <%= f.text_field :session_name %></br>
        <%= f.label :description %></br>
        <%= f.text_field :description %></br>
    </div>

<%= link_to 'Add new Track', new_user_session_track_path(@user, @session) %>
<%= f.submit "Update" %>
<% end %>
<%= link_to "Cancel", user_sessions_path(@user) %>

<ul>
    <% @session.tracks.each do |track| %>
        <li><audio id='<%= session.id %>' class="player" src='<%= track.audio %>' controls></audio><%= track.audio_file_name %>
    <% end %>
</ul>


