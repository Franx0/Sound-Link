<h1>Welcome <%= @user.user_name %></h1>
<h1>Your sessions</h1>
<% if flash[:notice] %>
    <%= flash[:notice] %>
<% end %>
<% @user.sessions.each do |session| %>
    <h3><%= session.session_name %></h1>
    <p><%= session.description %></p>
        <ul>
            <% session.tracks.each do |track| %>
                <% if track.audio_content_type!=nil %>
                    <li><audio id='<%= session.id %>' class="player" src='<%= track.audio %>' controls></audio><%= track.audio_file_name %>
                <% else %>
                    <p>There isn't any record in your session</p>
                    <% end %>
            <% end %>
        </ul>
<div id='<%= session.id %>' class='btn-play' style='width: 30px; height: 10px; border: solid black'></div>
<div id='<%= session.id %>' class='btn-pause' style='width: 30px; height: 10px; border: solid black'></div>
    <%= link_to 'Edit', edit_user_session_path(@user, session) %>
    <%= link_to 'Remove session', user_session_path(@user, session), method: :delete, data: {confirm: "Are you sure?"} %>
<% end %></br>
<%= link_to 'Create new session', new_user_session_path %>
<%= link_to "Come back to your profile", user_path(@user) %>

